<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Auther:</strong>
  <%= @movie.auther %>
</p>

<p>
  <strong>Content:</strong>
  <%= @movie.content %>
</p>

<p>
  <strong>movies:</strong>
  <% if @movie.movie.attached? %>
  <video src="<%= rails_blob_path(@movie.movie) %>" type="video/mp4" controls></video>
<% end %>
</p>

<h2>Comments</h2>
  <div id="comments">
    <%= render @movie.comments %>
  </div>

<% if user_signed_in? %>
<%= render 'comments/new', movie: @movie %> 
<% end %>

<% if user_signed_in? && @movie.user_id == current_user.id %>
<%= link_to 'Edit', edit_movie_path(@movie) %> |
<% end %>
<%= link_to 'Back', movies_path %>
